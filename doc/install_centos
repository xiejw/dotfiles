install in virtual_vm
  memory 2048M
  ssd 20G
  network: add one more adapter: Adapter2/HostOnly
  display: change graph controller to VBoxVGA

install centos_8 minimal iso
  timezone
  select minimal install
  disable kdump
  make user as admin (sudo)
  enable both network (enp0s3/enp0s8)

after install
  enable network
    ip addr
    nmcli d
    overwrite ONBOOT="yes"Â in /etc/sysconfig/network-scripts/ifcfg-enp0s8
    ifup enp0s8

  change hostname
    update files
      /etc/hostname
      /etc/hosts
    backup cmd
      hostnamectl set-hostname <hostname>

dnf
  main cmds:
    dnf check-update
    dnf upgrade
    dnf clean all

  optional
    clean old kernels: dnf remove $(dnf repoquery --installonly --latest-limit=-2 -q)

config apps
  dnf install vim git wget tar make clang tmux ncurses-term
    ncurses-term: needed for 256color mode for tmux
  EDITOR=vim git config --global -e
  ssh-keygen -t rsa -b 4096 -C "your_email@example.com"
  copy ~/.ssh/id_rsa.pub to remote hosts

config dotfiles
config vimrc

systemctl
  systemctl --type=service --state=active list-units
  systemctl status NetworkManager  # Find names via listing.
  systemctl restart NetworkManager
